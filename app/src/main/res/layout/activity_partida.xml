<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Partida">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <TextView
            android:id="@+id/titulo"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/TextViewPartida"
            android:textAlignment="center"
            android:textSize="50dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="50dp">

                <TextView
                    android:id="@+id/scoreJugador1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="@string/TextViewPuntuacion"
                    android:gravity="center"/>
                <ImageView
                    android:id="@+id/imagenJugador1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/interrogacion"
                    android:scaleType="centerCrop"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/nomJugador1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="@string/TextViewNombreUsuario"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/scoreJugador2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="@string/TextViewPuntuacion"
                    android:gravity="center"/>
                <ImageView
                    android:id="@+id/imagenJugador2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/interrogacion"
                    android:scaleType="centerCrop"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/nomJugador2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="@string/TextViewNombreUsuario2"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageButton
                android:id="@+id/btnPiedra"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:text="Piedra"
                android:background="@android:color/transparent"
                android:src="@drawable/piedra"
                android:layout_marginRight="10dp"/>

            <ImageButton
                android:id="@+id/btnPapel"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:text="Papel"
                android:background="@android:color/transparent"
                android:src="@drawable/papel"
                android:layout_marginRight="10dp"/>

            <ImageButton
                android:id="@+id/btnTijeras"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:text="Tijera"
                android:background="@android:color/transparent"
                android:src="@drawable/tijeras"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>